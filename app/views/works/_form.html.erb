<%= form_with(model: work) do |form| %>
  <% if work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
        <% work.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class=""w-full max-w-xs">
    <%= form.label :date, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.date_field :r_date, :value => work.r_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
  </div>
 
  <div class="container field">
    <%= form.label :time, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :r_time, class: "shadow appearance-none border rounded  py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "00:00" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
